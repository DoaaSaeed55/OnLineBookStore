@model OnLineBookStore.ViewModel.EditRoleViewModel
@{
    ViewData["Title"] = "Edit Role";
}
<h1>Edit Role</h1>

<form  method="post" class="row">
    <div class="mt-3 col-4 ">
        <div class="form-group row">
            <label asp-for="Id" class="col-2 col-form-label"></label>
            <input asp-for="Id" class="form-control col-9 p-2"  style="font-size:0.9 em" />
        </div>
        <div class="form-group row">
            <label asp-for="RoleName" class="col-2 col-form-label"></label>
            <input asp-for="RoleName" class="form-control col-9 p-2" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>

        @* <div asp-validation-summary="All" class="text-danger"></div> *@
        <div class="form-group  mt-3">
            <a asp-action="ListAllRoles" class="btn btn-warning"><i class="fa-solid fa-angles-left"></i>Back</a>
            <button type="submit" class="btn btn-primary mr-3">Update</button>
        </div>
    </div>
    <div class="col-1"></div>
    <div class="col-5">
        <h6>User with @Model.RoleName role</h6>
       <table class="table table-striped col-8">
           <tr></tr>
            @if (Model.Users.Any())
            {
                foreach(var user in Model.Users)
                {
                    <tr>
                        <td class="form-label">@user</td>
                    </tr>
                }

            }
            else
            {
                <tr>
                    <td class="form-label">No User With @Model.RoleName role</td>
                </tr>
            }
        </table>
        <div>
            <a asp-action="EditUserInRole" asp-route-id="@Model.Id" class="btn btn-primary">Add/Remove Users In Roles</a>
        </div>
    </div>
</form>